# ===========================================
# DATABASE - Choose ONE option:
# ===========================================

# Option 1: Neon (FREE cloud PostgreSQL - recommended for low-spec machines)
# Sign up at https://neon.tech and create a project
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/billboard_market?sslmode=require

# Option 2: Local PostgreSQL
DATABASE_URL=postgresql://billboard:billboard_dev_password@localhost:5432/billboard_market

# ===========================================
# REDIS - Choose ONE option:
# ===========================================

# Option 1: Upstash (FREE cloud Redis - recommended for low-spec machines)
# Sign up at https://upstash.com and create a Redis database
# REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# Option 2: Local Redis
REDIS_URL=redis://localhost:6379

# ===========================================
# SOLANA - Devnet Configuration
# ===========================================
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com

# Deployed Program ID on Devnet
PROGRAM_ID=79Za2f2rCStCvfTv74JPhDBS9BEW48mx9gNXaLvgFRdt

# Platform Authority Keypair (base58 encoded private key)
# Generate with: solana-keygen new --outfile keys/platform-authority.json
# Then convert to base58: cat keys/platform-authority.json | node -e "const bs58=require('bs58');let d='';process.stdin.on('data',c=>d+=c);process.stdin.on('end',()=>console.log(bs58.encode(Buffer.from(JSON.parse(d)))));"
PLATFORM_AUTHORITY_KEYPAIR=your_base58_encoded_keypair_here

# Storage
STORAGE_PROVIDER=local
# S3 (optional)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# X (TWITTER) API - RapidAPI twitter241
# ===========================================
X_PROVIDER=rapidapi
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=twitter241.p.rapidapi.com

# ===========================================
# TWITTER OAUTH - NextAuth.js
# ===========================================
# Create a Twitter Developer App at https://developer.twitter.com
# Enable OAuth 2.0 with User Authentication
# Add callback URL: http://localhost:3000/api/auth/callback/twitter
TWITTER_CLIENT_ID=your_twitter_oauth2_client_id
TWITTER_CLIENT_SECRET=your_twitter_oauth2_client_secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# ===========================================
# VERIFICATION SETTINGS
# ===========================================
HASH_MAX_DISTANCE=10
VERIFY_POLL_INTERVAL_MS=60000
VERIFY_MAX_DURATION_MS=1800000
KEEPALIVE_CHECKS_PER_DAY=7

# ===========================================
# APP SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
JWT_SECRET=your_jwt_secret_here_change_in_production
